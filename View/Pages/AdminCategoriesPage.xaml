<Page x:Class="RestoApp_Afonichev.View.Pages.AdminCategoriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestoApp_Afonichev.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="749" d:DesignWidth="1592"
      Title="AdminCategoriesPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource AdminButtonStyle}"
                Content="Работники"
                Name="EployeeBtn"
                Click="EployeeBtn_Click"/>
        <Button Grid.Column="1"
                Style="{StaticResource AdminButtonStyle}"
                Content="Столы"
                Name="TableBtn"
                Click="TableBtn_Click"/>
        <Button Grid.Column="2"
                Style="{StaticResource AdminButtonStyle}"
                Content="Позиции"
                Name="PositionBtn"
                Click="PositionBtn_Click"/>
    </Grid>
</Page>
